extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug

block main
  if role.permissions.includes("blogs-category_view")
    .container-fluid
      h1.mb-4.text-center Danh Mục Blog

      +alert-success(3000)
      +alert-error(3000)

    .card.mb-3
      .card-header Bộ Lọc và Tìm Kiếm
      .card-body
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6
            +search(keyword)
          
    .card.mb-3
      .card-header Danh Sách Danh Mục
        .card-body
          .row
            .col-8
            .col-4
              if role.permissions.includes("blogs-category_create")
                a(
                  href=`${prefixAdmin}/blogs-category/create`
                  class="btn btn-outline-primary mb-3"
                ) + Thêm Mới

          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead
              tr
                th
                  input(type="checkbox" name="checkall")
                th STT
                th Hình Ảnh
                th Tiêu Đề
                th Vị Trí
                th Trạng Thái
                th Người Tạo
                th Người Cập Nhật ( Gần Nhất )
                th Thao Tác

            tbody
              each item, index in records 
                tr
                  td
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                    )
                  td #{index + 1}
                  td
                    img( 
                      src=item.thumbnail
                      alt=item.title
                      width="100px"
                      height="auto"
                    )
                  td #{item.title}
                  td 
                    input(
                      type="number"
                      value=item.position
                      style="width: 60px"
                      min="1"
                      name="position"
                    )
                  td
                    if item.status == "active"
                      a( 
                        href="javascript:;"
                        data-status=item.status
                        data-id=item.id
                        button-change-status
                        class="badge badge-success"
                      ) Hoạt Động
                    else
                      a( 
                        href="javascript:;"
                        data-status=item.status
                        data-id=item.id
                        button-change-status
                        class="badge badge-danger"
                      ) Dừng Hoạt Động
                  td
                      if item.createdBy && item.createdBy.accountFullName
                        p.text-center #{item.createdBy.accountFullName} 
                        p.text-center
                          +formatDate(item.createdBy.createdAt)        
                      else
                        p.text-center N/A	
                  td
                    - const updatedBy = item.updatedBy.slice(-1)[0];
                    if updatedBy
                      p #{updatedBy.accountFullName} 
                      p
                        +formatDateTime(updatedBy.updatedAt)
                    else
                      p N/A	    
                  td
                    a(
                      class="btn btn-info btn-sm m-1"
                      href=`${prefixAdmin}/blogs-category/detail/${item.id}`
                    ) Chi Tiết
                    if role.permissions.includes("blogs-category_edit")
                      a(
                        class="btn btn-warning btn-sm m-1"
                        href=`${prefixAdmin}/blogs-category/edit/${item.id}`
                      ) Sửa
                    button(
                      class="btn btn-danger btn-sm m-1 m-1"
                      button-delete
                      data-id=item.id
                    ) Xóa

    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/blogs-category/change-status`
    )

    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/blogs-category/delete`
    )

  else
    h3 Bạn Chưa Được Cấp Quyền Này ! Vui Lòng Liên Hệ ADMIN Để Được Cấp Quyền.

block scripts
  if role.permissions.includes("blogs-category_view")
    script(src="/admin/js/blog-category.js")
