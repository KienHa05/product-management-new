extends ../../layouts/default.pug
include ../../mixins/filter-status.pug

block main
  h1 Danh Sách Blog

  .card.mb-3
    .card-header Bộ Lọc và Tìm Kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6
          form(id="form-search")
            .input-group
              input(
                type="text"
                placeholder="Nhập từ khóa tìm kiếm..."
                name="keyword"
                class="form-control"
                value=keyword
              )
              .input-group-append
                button(
                  class="btn btn-secondary"
                  type="submit"
                ) Tìm Kiếm

  .card.mb-3
    .card-header Danh Sách Blog
      .card-body
        table.table.table-hover.table-sm
          thead
            tr
              th STT
              th Hình Ảnh
              th Tiêu Đề
              th Tác Giả
              th Trạng Thái
              th Thao Tác

          tbody
            each item, index in blogs
              tr
                td #{index + 1}
                td
                  img( 
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                  )
                td #{item.title}
                td #{item.author.name}
                td
                  if item.status == "published"
                    a(href="#" class="badge badge-success") Công Khai
                  else
                    a(href="#" class="badge badge-warning") Bản Nháp
                td
                  button(class="btn btn-warning btn-sm") Sửa   
                  button(class="btn btn-danger btn-sm ml-1") Xóa

      