extends ../../layouts/default.pug

block main
  h1 Danh Sách Blog

  .card.mb-3
    .card-header Bộ Lọc và Tìm Kiếm
    .card-body
      each item in filterStatus
        button(
          class=`btn btn-sm ml-1 btn-outline-${item.buttonColor} ${item.class}`
          button-status=item.status
        ) #{item.name}

  .card.mb-3
    .card-header Danh Sách Blog
      .card-body
        table.table.table-hover.table-sm
          thead
            tr
              th STT
              th Hình Ảnh
              th Tiêu Đề
              th Tác Giả
              th Trạng Thái
              th Thao Tác

          tbody
            each item, index in blogs
              tr
                td #{index + 1}
                td
                  img( 
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                  )
                td #{item.title}
                td #{item.author.name}
                td
                  if item.status == "published"
                    a(href="#" class="badge badge-success") Công Khai
                  else
                    a(href="#" class="badge badge-warning") Bản Nháp
                td
                  button(class="btn btn-warning btn-sm") Sửa   
                  button(class="btn btn-danger btn-sm ml-1") Xóa

      