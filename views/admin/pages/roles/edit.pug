extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if role.permissions.includes("roles_edit")
    h1(class="mb-4") Chỉnh Sửa Nhóm Quyền

    +alert-success(5000)
    +alert-error(5000)

    form(
      action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
      method="POST"
    )
      div(class="form-group")
        label(for="title") Tiêu Đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
          value=data.title
        )
      div(class="form-group")
        label(for="roleType") Loại Vai Trò
        input(
          type="text"
          class="form-control"
          id="roleType"
          name="roleType"
          required
          value=data.roleType
        )
      div(class="form-group")
        label(for="desc") Mô Tả
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          value=data.description
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập Nhật