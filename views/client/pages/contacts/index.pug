extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)

  .container.contact-page.mt-5.mb-5
    h1.text-center.mb-4 Liên Hệ Với Chúng Tôi

    .row.d-flex.align-items-stretch
      //- FORM bên trái
      .col-lg-6.contact-left.mb-4.d-flex
        form.border.rounded.p-4.bg-light.w-100.d-flex.flex-column(
          action="/contact"
          method="POST"
        )
          .form-group
            label(for="fullName") Họ và tên *
            input#fullName.form-control(type="text", name="fullName", required, placeholder="Nhập họ và tên")
          .form-group
            label(for="email") Email *
            input#email.form-control(type="email", name="email", required, placeholder="Nhập email của bạn")
          .form-group
            label(for="phone") Số điện thoại
            input#phone.form-control(type="text", name="phone", placeholder="Nhập số điện thoại")
          .form-group
            label(for="company") Công ty
            input#company.form-control(type="text", name="company", placeholder="Tên công ty (nếu có)")
          .form-group
            label(for="subject") Chủ đề *
            input#subject.form-control(type="text", name="subject", required, placeholder="Nhập chủ đề liên hệ")
          .form-group
            label(for="question") Câu hỏi / Nội dung *
            textarea#question.form-control(name="question", rows="5", required, placeholder="Nhập nội dung câu hỏi...")
          button.btn.btn-primary.btn-block.mt-3(type="submit") Gửi Liên Hệ

      //- BÊN PHẢI: Thông tin liên hệ và bản đồ
      .col-lg-6.contact-right.d-flex.flex-column.justify-content-between
        .info-contact.border.rounded.p-4.bg-light.mb-3
          h5.mb-3 Thông Tin Liên Hệ
          ul.list-unstyled
            li.mb-2
              strong Số điện thoại:
              |  0123 456 789
            li.mb-2
              strong Email:
              |  test@gmail.com
            li.mb-2
              strong Số Fax:
              |  (024) 1234 5678
            li.mb-2
              strong Mã số thuế:
              |  0101234567
            li.mb-2
              strong Mã số doanh nghiệp:
              |  0312345678 do Sở KHĐT TP.HCM cấp
            li.mb-2
              strong Giấy phép kinh doanh:
              |  Số 123/GP-BKHN cấp ngày 01/01/2024

        .map-wrapper.border.rounded.overflow-hidden(style="height: 100%; flex: 1;")
